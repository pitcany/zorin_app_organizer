[Desktop Entry]
Version=1.0
Type=Application
Name=Unified Package Manager
GenericName=Package Manager
Comment=Manage APT, Snap, and Flatpak packages in one unified interface
Exec=upm-gui
Icon=upm
Terminal=false
Categories=System;PackageManager;Settings;
Keywords=package;software;install;uninstall;apt;snap;flatpak;applications;
StartupNotify=true
StartupWMClass=unified-package-manager

# Translations (examples - can be expanded)
Name[es]=Gestor de Paquetes Unificado
Comment[es]=Gestiona paquetes APT, Snap y Flatpak en una interfaz unificada
Name[fr]=Gestionnaire de Paquets Unifié
Comment[fr]=Gérez les paquets APT, Snap et Flatpak dans une interface unifiée
Name[de]=Einheitlicher Paketmanager
Comment[de]=Verwalten Sie APT-, Snap- und Flatpak-Pakete in einer einheitlichen Oberfläche

[Desktop Action Search]
Name=Search for Applications
Exec=upm-gui --search

[Desktop Action Installed]
Name=View Installed Applications
Exec=upm-gui --installed

Actions=Search;Installed;
